datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String        @id @default(uuid())
  name         String
  email        String        @unique
  password     String
  phoneNumber  String
  publications Publication[]
  createdAt    DateTime      @default(now())
}

model Publication {
  id              String         @id @default(uuid())
  author          User           @relation(fields: [authorId], references: [id])
  authorId        String
  name            String
  description     String
  category        String
  gender          String
  breed           String?
  weightInGrams   Int?
  ageInYears      Int?
  zipCode         String
  city            String
  state           String
  hidePhoneNumber Boolean        @default(false)
  images          Image[]
  characterists   Characterist[]
  createdAt       DateTime       @default(now())
}

model Image {
  id            String      @id @default(uuid())
  publication   Publication @relation(fields: [publicationId], references: [id])
  publicationId String
  url           String
  createdAt     DateTime    @default(now())
}

model Characterist {
  id            String      @id @default(uuid())
  publication   Publication @relation(fields: [publicationId], references: [id])
  publicationId String
  name          String
  createdAt     DateTime    @default(now())
}
